<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:fontFamily">@font/myriadprolight</item>
    </style>

    <style name="TextViewSplashStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_7</item>
        <item name="android:fontFamily">@font/myriadprobold</item>
    </style>

    <style name="TextViewCityStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/city_text_selector</item>
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:fontFamily">@font/myriadproregular</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_0</item>
        <item name="android:textSize">@dimen/text_size_2</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/myriadproregular</item>
    </style>

</resources>