<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:fontFamily">@font/myriadprolight</item>
    </style>

    <style name="TextViewCityRowStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/city_text_selector</item>
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:fontFamily">@font/myriadproregular</item>
    </style>

    <style name="TextViewCityNameStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_5</item>
        <item name="android:fontFamily">@font/myriadprosemibold</item>
    </style>

    <style name="TextViewWeatherDescriptionStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_2</item>
        <item name="android:fontFamily">@font/myriadprolight</item>
    </style>

    <style name="TextViewWeatherTemperatureStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_6</item>
        <item name="android:fontFamily">@font/myriadproregular</item>
    </style>

    <style name="TextViewWeatherItemTitleStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:fontFamily">@font/myriadprolight</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextViewWeatherItemValueStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_5</item>
        <item name="android:fontFamily">@font/myriadproregular</item>
    </style>

    <style name="TextViewErrorStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_0</item>
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:fontFamily">@font/myriadproregular</item>
    </style>


    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/color_0</item>
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/myriadproregular</item>
    </style>

    <style name="AstroPayProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/color_0</item>
        <item name="colorPrimaryDark">@color/color_0</item>
        <item name="colorControlNormal">@color/color_0</item>
        <item name="colorControlActivated">@color/color_0</item>
        <item name="android:progressTint">@color/color_0</item>
        <item name="android:progressDrawable">@color/color_0</item>
        <item name="android:indeterminateTint">@color/color_0</item>
        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>