<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="@dimen/shape_balloon_bottom" android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorBalloonBackgroundPressed" />
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="@dimen/shape_balloon_border_radius" android:bottomRightRadius="@dimen/shape_balloon_border_radius" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorShadow" />
                    <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="@dimen/shape_balloon_border_radius" android:bottomRightRadius="@dimen/shape_balloon_border_radius" />
                </shape>
            </item>
            <item android:bottom="@dimen/shape_balloon_bottom">
                <shape>
                    <solid android:color="@color/colorBalloonBackground" />
                    <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="@dimen/shape_balloon_border_radius" android:bottomRightRadius="@dimen/shape_balloon_border_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
